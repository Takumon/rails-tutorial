<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-r">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 200 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <div class="label-and-value_label">メールアドレス</div>
  <div class="label-and-value_value"><%= @user.email %></div>
</div>
<div class="row">
  <div class="label-and-value_label">作成日時</div>
  <div class="label-and-value_value"><%= @user.created_at %></div>
</div>
<div class="row">
  <div class="label-and-value_label">更新日時</div>
  <div class="label-and-value_value"><%= @user.updated_at %></div>
</div>
